{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Raylib Derle",
            "command": "C:/w64devkit/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I", "C:/raylib/include",
                "-L", "C:/raylib/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Debugger tarafindan olusturulan gorev."
        }
    ]
}